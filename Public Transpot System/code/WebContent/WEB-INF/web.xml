<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>PublicTransportSystem</display-name>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>controllers.RegistrationController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userhome</servlet-name>
    <servlet-class>controllers.UserHomeController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userSearch</servlet-name>
    <servlet-class>controllers.UserSearchController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userDetailsUpdate</servlet-name>
    <servlet-class>controllers.UserDetailsUpdateController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>providerController</servlet-name>
    <servlet-class>controllers.ProviderController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userSearch</servlet-name>
    <url-pattern>/userSearch</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userhome</servlet-name>
    <url-pattern>/userhome</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userDetailsUpdate</servlet-name>
    <url-pattern>/userDetailsUpdate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>providerController</servlet-name>
    <url-pattern>/providerController</url-pattern>
  </servlet-mapping>
</web-app>